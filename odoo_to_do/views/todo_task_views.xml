<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_task_todo_kanban">
            <field name="name">todo.task.kanban</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <kanban
                        default_group_by="stage_id"
                        class="o_kanban_small_column o_kanban_project_tasks"
                        examples="project"
                        default_order="priority desc">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="stage_id" options='{"group_by_tooltip": {"description": "Description"}}'/>
                    <field name="active"/>
                    <field name="due_date"/>
                    <field name="assignee_id"/>
                    <field name="priority"/>
                    <field name="comments"/>
                    <templates>
                        <t t-name="kanban-menu" t-if="!selection_mode" groups="base.group_user">
                            <a t-if="widget.editable" role="menuitem" type="set_cover" class="dropdown-item"
                               data-field="displayed_image_id">Set Cover Image
                            </a>
                        </t>
                        <t t-name="kanban-box">
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="o_kanban_content">
                                        <div class="o_kanban_header">
                                            <div class="o_kanban_primary_left">
                                                <field name="name"/>
                                                <div class="o_kanban_tags">
                                                    <field name="priority" widget="priority"/>
                                                </div>
                                            </div>
                                            <div class="o_kanban_primary_right">
                                                <field name="stage_id" widget="statusbar" clickable="1"/>
                                            </div>
                                        </div>
                                        <div class="o_kanban_record_bottom">
                                            <field name="name"/>
                                            <field name="due_date"/>
                                            <field name="assignee_id"/>
                                            <field name="active"/>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Form View for Todo Task -->
        <record id="view_todo_task_form" model="ir.ui.view">
            <field name="name">todo.task.form</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <form string="Todo Task">
                    <header>
                        <field name="active" invisible="1"/>
                        <field name="stage_id" widget="statusbar_duration"
                               options="{'clickable': '1', 'fold_field': 'fold'}"
                               invisible="not active"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="due_date"/>
                            <field name="assignee_id"/>
                            <field name="priority"/>
                        </group>
                        <notebook>
                            <page string="Comments">
                                <field name="comments">
                                    <tree string="Comments">
                                        <field name="user_id"/>
                                        <field name="content"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View for Todo Task -->
        <record id="view_todo_task_tree" model="ir.ui.view">
            <field name="name">todo.task.tree</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <tree string="Todo Task">
                    <field name="name"/>
                    <field name="due_date"/>
                    <field name="assignee_id"/>
                    <field name="priority"/>
                    <!--                    <field name="status"/>-->
                </tree>
            </field>
        </record>

        <!-- Action for Todo Task -->
        <record id="action_todo_task" model="ir.actions.act_window">
            <field name="name">Todo Tasks</field>
            <field name="res_model">todo.task</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <record id="action_todo_task_stage" model="ir.actions.act_window">
            <field name="name">Task Stage</field>
            <field name="res_model">todo.task.stage</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_to_do_task" name="Todo Tasks"/>

        <menuitem
                id="menu_to_do"
                name="Todo Task"
                parent="menu_to_do_task"
                action="action_todo_task"/>

        <menuitem
                id="menu_to_do_task_stage"
                name="Todo Task Stage"
                parent="menu_to_do_task"
                action="action_todo_task_stage"/>

        <record id="view_todo_task_filter" model="ir.ui.view">
            <field name="name">todo.task.list.select</field>
            <field name="model">todo.task</field>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <search string="Search Todo">
                    <field name="name"/>
                    <field name="assignee_id"/>
                    <field name="due_date"/>
                    <field name="priority"/>
                    <field name="stage_id"/>
                    <filter string="My Tasks" name="my_task" domain="[('assignee_id', '=', uid)]"/>
                    <separator/>
                    <filter string="Medium" name="medium" domain="[('priority', '=', 'medium')]"/>
                    <filter string="Low" name="low" domain="[('priority', '=', 'Low')]"/>
                    <separator/>
                    <filter string="High" name="high" domain="[('priority', '=', 'high')]"/>


                </search>
            </field>
        </record>

    </data>
</odoo>
